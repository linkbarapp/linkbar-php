{
    "name": "linkbar/sdk",
    "description": "PHP SDK for the Linkbar API - Create, manage, and track short links",
    "type": "library",
    "keywords": ["linkbar", "url-shortener", "api", "short-links"],
    "homepage": "https://linkbar.co",
    "license": "MIT",
    "authors": [
        {
            "name": "Linkbar",
            "email": "support@linkbar.co"
        }
    ],
    "support": {
        "issues": "https://github.com/linkbarapp/linkbar-php/issues",
        "source": "https://github.com/linkbarapp/linkbar-php"
    },
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Linkbar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linkbar\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests",
        "phpcs": "phpcs src tests",
        "check": [
            "@phpstan",
            "@phpcs",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}